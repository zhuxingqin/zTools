/* component/timePicker/timePicker.wxss */
.timePicker>view{
  border-radius: 20rpx;
  background-color: #252E35;
  width: 90vw;
  color: #fff;
  font-size: 32rpx;
}
.timePicker>view>.title{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}
.timePicker>view>.cuIcon-close{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 40rpx;
  color: #cdcdcd;
  border-radius: 50%;
}
.content{
  height: calc( 100% - 80rpx );
  padding: 0 20rpx;
  padding-bottom: 20rpx;
}
.content .time-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 80rpx;
}
.content .time-item>.left{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: calc( 100% - 50rpx );
}
.content .time-item>.cuIcon-check{
  width: 50rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #5B9CF7;
}
.content .time-item>.left>.icon{
  margin-right: 10rpx;
  font-size: 45rpx;
}
.content .time-item>.left>.name{
  font-size: 35rpx;
}
.content .notice{
  border-top: 1px solid rgba(0, 0, 0, 0);
  border-bottom: 1px solid rgba(0, 0, 0, 0);

  transition: .4s all;
  height: 80rpx;
  color: #797D86;
  padding-right: 20rpx;
}
.content .notice.on{
  height: 80rpx;
  color: #e1e1e1;
  padding-right: 20rpx;
  border-top: 1px solid #4B515A;
  border-bottom: 1px solid #4B515A;
}
.content .notice .right>.time{
  color: #5B9CF7;
  margin-right: 20rpx;
}
.content .notice .cuIcon-notice,.content .notice .cuIcon-noticefill{
  margin-right: 10rpx;
  font-size: 40rpx;
}
.content .btnBox{
  height: 80rpx;
  margin-top: 20rpx;
}
.content>.btnBox .btn{
  width: calc( 50% - 10rpx );
  text-align: center;
  border-radius: 10rpx;
  line-height: 80rpx;
  height: 80rpx;
  color: #fff;
}
.content>.btnBox .btn.clear{
  background-color: #D01D4E;
}
.content>.btnBox .btn.done{
  background-color: #4A515A;
}
.btn.done button{
  width: 100%;
  height: 100%;
  line-height: 80rpx;
}