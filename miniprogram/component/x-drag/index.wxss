.marked {
  position: relative; }
  .marked:after {
    position: absolute;
    content: "";
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    z-index: 111;
    background: rgba(0, 0, 0, 0.3); }

.item-wrap {
  position: relative;
  height: 400rpx;
  overflow: unset;
}
  .item-wrap .item {
    position: absolute;
    width: 100%;
    top: 40rpx;
    z-index: 1; 
    display: flex;
    justify-content: center;
  }
    .item-wrap .item.transition,.item-wrap .item.transition_switch {
      transition: 0.3s all !important;
    }
