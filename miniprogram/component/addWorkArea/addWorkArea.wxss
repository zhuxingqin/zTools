/* component/addWorkArea/addWorkArea.wxss */
.partWindow>view{
  background-color: rgba(0,0,0, 0);
  overflow-y: unset !important;
  position: absolute;
  top: 30%;
}
.partBox{
  box-shadow:  0rpx 20rpx 30rpx 10rpx rgba(0, 0, 0, .3);
  background-color: #fff;
  height: 600rpx;
  width: 250px;
  padding: 30rpx;
  display: inline-block;
  vertical-align:middle;
  position: relative;
  border-radius: 40rpx;
}
      
.partBox .name{
  font-size: 80rpx;
}
.partBox input{
  font-size: 80rpx;
  height: 112rpx;
}
.listBox{
  margin-top: 30rpx;
  font-size: 50rpx;
}
.listBox>.noTodo>image{
  height: 300rpx;
  margin-left: -50rpx;
  margin-top: -32rpx;
}
.listBox>.more{
  font-size: 50rpx;
  color: #cdcdcd;
  text-align: center;
  width: calc(100% - 60rpx);
  position: absolute;
  bottom: 40rpx;
}
.listBox>.noTodo{
  width: calc(100% - 60rpx);
  position: relative;
  overflow: hidden;
}
.btn{
  font-size: 50rpx;
  width: 80%;
  line-height: 100rpx;
  border-radius: 20rpx;
  background-color: #5D9CF6;
  color: #fff;
  text-align: center;
  position: absolute;
  bottom: -150rpx;
  left: 10%;
  box-shadow:  0rpx 20rpx 30rpx 10rpx rgba(0, 0, 0, .3);
}