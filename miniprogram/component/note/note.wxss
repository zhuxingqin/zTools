/* component/note/note.wxss */
.note{
  /* background-color: #FFF7CC; */
  width: 100%;
  transition: all .4s;
	box-shadow: 0rpx 15rpx 15rpx 10rpx rgba(0, 0, 0, 0.2);
}
.note .topBar{
  line-height: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.colorPicker{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.colorPicker .color{
  height: 100%;
  width: calc( 100% / 7);
}
.note .topBar .left,.note .topBar .right{
  display: flex;
  justify-content: center;
  align-items: center;
}
.note [class*="cuIcon-"]{
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
  margin-left: 10rpx;
}
.note [class*="cuIcon-"] image{
  width: 33rpx;
}
.note .content{
  /* min-height: 460rpx; */
  padding: 15rpx;
}
.note .content textarea.noteinp{
  width: unset;
  min-height: 430rpx;
}
.note .bottomBar{
  border-top: 1px solid #e1e1e1;
  height: 65rpx;
  line-height: 65rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}
.note [class*=animation-] {
  animation-duration: .2s !important;
}
