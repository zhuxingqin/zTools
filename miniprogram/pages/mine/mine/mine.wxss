/* miniprogram/pages/mine/mine/mine.wxss */
page {
  background-image: var(--gradualBlue);
  color: var(--white);
  padding-bottom: 100rpx;
  height: calc (100vh - 100rpx);
}
.topNav{
  text-align: center;
}
.aboutBar{
  border-radius: 30rpx;
  background-color: #fff;
  width: 90%;
  height: 90rpx;
  position: fixed;
  bottom: 130rpx;
  left: calc( 10% / 2);
  color: #666;
  padding: 0 30rpx;
  z-index: 9;
}
.aboutBar .left .cuIcon-peoplefill{
  font-size: 40rpx;
  margin-right: 10rpx;
}
.aboutBar .cuIcon-right{
  font-size: 40rpx;
}
.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 80rpx 0 0 0;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.nickName{
  color: #fff;
  font-size: 28rpx;
}
.userinfo-avatar:after {
  border: none;
}
.button-hover{
  color: #fff;
}