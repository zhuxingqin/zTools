page {
  background-image: var(--gradualBlue);
  width: 100vw;
  overflow: hidden;
}
.cu-custom{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9;
}
/* 主要页面 */
.DrawerPage {
  position: fixed;
  width: 100vw;
  height: 100vh;
  left: 0vw;
  background-color: #fff;
  transition: all 0.4s;
  color: #000;
}
.DrawerPage .partOut{
  overflow-x: scroll;
  white-space: nowrap;
  transition: .4 all;
}
/*隐藏滚动条*/
.partOut::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.DrawerPage .partOut .partBox{
  border-radius: 20rpx;
  height: 300rpx;
  box-shadow:  0rpx 25rpx 30rpx 10rpx rgba(0, 0, 0, .13);
  min-width: 250rpx;
  width: 250rpx;
  margin: 40rpx 20rpx 60rpx 0;
  padding: 15rpx;
  display: inline-block;
  vertical-align:middle;
}

.DrawerPage .partOut .partBox:first-child{
  margin-left: 35rpx;
}
.DrawerPage .partOut .partBox:last-child{
  margin-right: 40rpx;
}
.DrawerPage .partOut .partBox .name{
  font-size: 40rpx;
}
.DrawerPage .partOut .partBox.add{
  margin-right: 200rpx;
}
.partBox>input{
  font-size: 40rpx;
}
.listBox{
  margin-top: 15rpx;
  font-size: 25rpx;
}
.listBox>view{
  line-height: 40rpx;
  font-size: 20rpx;
}
.listBox>.more{
  color: #cdcdcd;
  text-align: center;
}
.DrawerPage .timeBlock{
  padding: 0 20rpx;
  /* display: flex; */
  /* flex-direction: column; */
  /* align-items: center; */
}
.DrawerPage .block{
  width: 100%;
  height: 200rpx;
  position: relative;
}
.DrawerPage .block>.end{
  position: absolute;
  bottom: -100rpx;
  text-align: center;
  color: #999;
  width: 100%;
}
.DrawerPage .donePageBtn{
  text-align: center;
  line-height: 130rpx;
  color: #999;
  font-size: 30rpx;
  font-weight: bold;
}
.DrawerPage.show {
  transform: scale(0.9, 0.9);
  left: 85vw;
  box-shadow: 0 0 60rpx rgba(0, 0, 0, 0.2);
  transform-origin: 0;
}

.DrawerWindow {
  position: absolute;
  width: 85vw;
  height: 100vh;
  left: 0;
  top: 0;
  transform: scale(0.9, 0.9) translateX(-100%);
  opacity: 0;
  pointer-events: none;
  transition: all 0.4s;
}

.DrawerWindow.show {
  transform: scale(1, 1) translateX(0%);
  opacity: 1;
  pointer-events: all;
}

.DrawerClose {
  position: absolute;
  width: 40vw;
  height: 100vh;
  right: 0;
  top: 0;
  color: transparent;
  padding-bottom: 30rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  background-image: linear-gradient(90deg, rgba(0, 0, 0, 0.01), rgba(0, 0, 0, 0.6));
  letter-spacing: 5px;
  font-size: 50rpx;
  opacity: 0;
  pointer-events: none;
  transition: all 0.4s;
}

.DrawerClose.show {
  opacity: 1;
  pointer-events: all;
  width: 15vw;
  color: #fff;
}

.DrawerPage .cu-bar.tabbar .action button.icon {
  width: 64rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin: 0;
  display: inline-block;
}

.DrawerPage .cu-bar.tabbar .action .cu-avatar {
  margin: 0;
}

.DrawerPage .nav {
  flex: 1;
}

.DrawerPage .nav .cu-item.cur {
  border-bottom: 0;
  position: relative;
}

.DrawerPage .nav .cu-item.cur::after {
  content: "";
  width: 10rpx;
  height: 10rpx;
  background-color: currentColor;
  position: absolute;
  bottom: 10rpx;
  border-radius: 10rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.DrawerPage .cu-bar.tabbar .action {
  flex: initial;
}
.DrawerWindow .userinfo-avatar ,.user-unlogin{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.DrawerWindow .nickName{
  color: #fff;
  font-size: 28rpx;
}
.DrawerWindow .userinfo-avatar:after {
  border: none;
}
.DrawerWindow .button-hover{
  color: #fff;
}
.DrawerWindow .outbox{
  width: 100%;
  margin-top: 60rpx;
}
.DrawerWindow .list{
  margin-top: 30rpx;
  /* position: absolute; */
  /* bottom: 40rpx; */
  /* left: calc( 10% / 2); */
  background-color: #fff;
  width: 100%;
  border-radius: 20rpx;
  /* border-top-left-radius: 0; */
  /* border-top-right-radius: 0; */
  z-index: 9;
  color: #999;
	/* box-shadow: 0rpx 20rpx 25rpx 8rpx rgba(0, 0, 0, .13); */
}
.DrawerWindow .list .item{
  transition: all .4s;
  height: 90rpx;
  padding: 0 30rpx;
}
.DrawerWindow .list .item:not(:last-child){
  border-bottom: 1px solid #f1f1f1;
}
.DrawerWindow .list .item:first-child{
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.DrawerWindow .list .item:last-child{
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.DrawerWindow .list .item .left .icon{
  font-size: 40rpx;
  margin-right: 10rpx;
}
.DrawerWindow  .list .item .cuIcon-right{
  font-size: 40rpx;
  color: #999;
}
.DrawerWindow .list .item .text{
  font-size: 30rpx;
  color: #999;
}
.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
  z-index: 10;
  background-color: rgba(0, 0, 0, .0);
  transition: all .3s;
}
.wrapper.show{
  background-color: rgba(0, 0, 0, .13);

}
.wrapper img {
  width: 300rpx;
  height: 300rpx;
}
.tools{
	background-color: #fff;
  border-radius: 20rpx;
  /* border-bottom-left-radius: 0; */
  /* border-bottom-right-radius: 0; */
	/* box-shadow: 0rpx 20rpx 25rpx 8rpx rgba(0, 0, 0, .13); */
  padding: 10rpx 20rpx 20rpx;
  width: 100%;
}
.tools .title{
  line-height: 80rpx;
  padding-left: 20rpx;
  color: #666;
  font-size: 35rpx;
  font-weight: bold;
}
.nav-list {
  display: flex ;
	flex-wrap: wrap;
  /* padding: 0px 40rpx 0px; */
	justify-content: space-between;
}

.nav-li {
  padding: 20rpx 20rpx;
  border-radius: 12rpx;
  width: 48%;
  /* margin: 0 0 20rpx; */
  background-image: url(https://image.weilanwl.com/color2.0/cardBg.png);
  background-size: cover;
  background-position: center;
  position: relative;
  z-index: 1;
}

.nav-li::after {
  content: "";
  position: absolute;
  z-index: -1;
  background-color: inherit;
  width: 100%;
  height: 100%;
  left: 0;
  bottom: -10%;
  border-radius: 10rpx;
  opacity: 0.2;
  transform: scale(0.9, 0.9);
}

.nav-li.cur {
  color: #fff;
  background: rgb(94, 185, 94);
  box-shadow: 4rpx 4rpx 6rpx rgba(94, 185, 94, 0.4);
}

.nav-title {
  font-size: 32rpx;
  font-weight: 300;
}

.nav-title::first-letter {
  font-size: 40rpx;
  margin-right: 4rpx;
}

.nav-name {
  font-size: 28rpx;
  text-transform: Capitalize;
  margin-top: 20rpx;
  position: relative;
}

.nav-name::before {
  content: "";
  position: absolute;
  display: block;
  width: 40rpx;
  height: 6rpx;
  background: #fff;
  bottom: 0;
  right: 0;
  opacity: 0.5;
}

.nav-name::after {
  content: "";
  position: absolute;
  display: block;
  width: 100rpx;
  height: 1px;
  background: #fff;
  bottom: 0;
  right: 40rpx;
  opacity: 0.3;
}

.nav-name::first-letter {
  font-weight: bold;
  font-size: 36rpx;
  margin-right: 1px;
}

.nav-li text {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 52rpx;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
}

.text-light {
  font-weight: 300;
}
